    {
      "name": "Movies",
      "item": [
        {
          "name": "Get All Movies",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/movies",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "movies"]
            }
          }
        },
        {
          "name": "Get Single Movie",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000/api/movies/{{movieId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "movies", "{{movieId}}"]
            }
          }
        },
        {
          "name": "Create Movie (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My Movie\",\n  \"genre\": \"Action\",\n  \"language\": \"English\",\n  \"releaseYear\": 2025,\n  \"isPublished\": true\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/movies",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "movies"]
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "var jsonData = pm.response.json();",
                    "pm.environment.set('movieId', jsonData.data._id);"
                  ]
                }
              }
            ]
          }
        },
        {
          "name": "Update Movie (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Movie\",\n  \"isPublished\": false\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/movies/{{movieId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "movies", "{{movieId}}"]
            }
          }
        },
        {
          "name": "Delete Movie (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{adminToken}}" }
            ],
            "url": {
              "raw": "http://localhost:5000/api/movies/{{movieId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "movies", "{{movieId}}"]
            }
          }
        }
      ]
    }
  ]
}
